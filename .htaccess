RewriteEngine On

# sitemap.xml isteğini sitemap.php dosyasına yönlendir
RewriteRule ^sitemap\.xml$ sitemap.php [L]

# Hata log dosyasına web üzerinden erişimi engelle
<Files "error_log.txt">
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
    <IfModule !mod_authz_core.c>
        Order deny,allow
        Deny from all
    </IfModule>
</Files>